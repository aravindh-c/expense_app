<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Month dropdown + Refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnRefreshSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFRESH"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMonthLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Month: -"
        android:paddingTop="8dp"
        android:textStyle="bold"/>

    <!-- Legend -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aravindh"
            android:padding="8dp"
            android:background="#E8F5E9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deepa"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            android:background="#FFF8E1" />
    </LinearLayout>

    <!-- Graph Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/graphContainer"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="14dp"
        android:background="#F5F5F5"
        android:padding="12dp">

        <!-- reference guideline (we set percent in code) -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <!-- dashed reference line -->
        <View
            android:id="@+id/refLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/dashed_line"
            app:layout_constraintTop_toTopOf="@id/guideRef"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRefAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs.15000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/refLine"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bars row at bottom -->
        <LinearLayout
            android:id="@+id/barsRow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Aravindh bar container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/barAravindh"
                    android:layout_width="44dp"
                    android:layout_height="10dp"
                    android:background="#2ECC71"/>

                <TextView
                    android:id="@+id/tvAravindhAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:paddingTop="6dp"/>
            </LinearLayout>

            <!-- Deepa bar container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/barDeepa"
                    android:layout_width="44dp"
                    android:layout_height="10dp"
                    android:background="#F1C40F"/>

                <TextView
                    android:id="@+id/tvDeepaAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:paddingTop="6dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- PAGE 1: FORM -->
    <ScrollView
        android:id="@+id/pageForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:clickable="true"
                    android:hint="Select date" />

                <Button
                    android:id="@+id/btnYesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yesterday" />

                <Button
                    android:id="@+id/btnToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today" />
            </LinearLayout>

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Name / Description" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:hint="What is this expense for?" />

            <!-- Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Amount" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="0.00" />

            <!-- Payment Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Payment Type" />

            <RadioGroup
                android:id="@+id/rgPaymentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit" />

                <RadioButton
                    android:id="@+id/rbDebit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit" />
            </RadioGroup>

            <!-- Expense Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Expense Type" />

            <Spinner
                android:id="@+id/spExpenseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etExpenseTypeOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="If Other, specify"
                android:visibility="gone" />

            <!-- Expense Owner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Expense Owner" />

            <Spinner
                android:id="@+id/spOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etOwnerOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="If Other, specify"
                android:visibility="gone" />

            <!-- Logged By -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Logged By" />

            <RadioGroup
                android:id="@+id/rgLoggedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbLoggedAravindh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aravindh" />

                <RadioButton
                    android:id="@+id/rbLoggedDeepa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deepa" />
            </RadioGroup>

            <!-- Submit -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="(Swipe LEFT to see summary)" />

        </LinearLayout>
    </ScrollView>

    <!-- PAGE 2: SUMMARY -->
    <LinearLayout
        android:id="@+id/pageSummary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This month - by owner"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSummaryMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month: -"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnRefreshSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:layout_marginTop="8dp" />

        <!-- Reference Row (15k) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference: ₹15,000"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/rowRef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="4dp">

            <View
                android:id="@+id/barRef"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0"
                android:background="@color/summaryRefGrey" />

            <TextView
                android:id="@+id/tvRefAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="15k" />
        </LinearLayout>

        <!-- Aravindh Row -->
        <LinearLayout
            android:id="@+id/rowAravindh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="12dp">

            <View
                android:id="@+id/barAravindh"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:background="@color/summaryGreen" />

            <TextView
                android:id="@+id/tvAravindhAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Aravindh: ₹0" />
        </LinearLayout>

        <!-- Deepa Row -->
        <LinearLayout
            android:id="@+id/rowDeepa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="8dp">

            <View
                android:id="@+id/barDeepa"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:background="@color/summaryYellow" />

            <TextView
                android:id="@+id/tvDeepaAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Deepa: ₹0" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="(Swipe RIGHT to go back to form)" />

    </LinearLayout>

</FrameLayout>

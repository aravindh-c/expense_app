<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date row -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Display chosen date -->
            <EditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:clickable="true"
                android:hint="Select date" />

            <Button
                android:id="@+id/btnPickDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…" />
        </LinearLayout>

        <!-- Quick slider buttons: Yesterday / Today -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnYesterday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yesterday" />

            <Button
                android:id="@+id/btnToday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today" />
        </LinearLayout>

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:maxLength="1500" />

        <!-- Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="0.00" />

        <!-- Payment Type: Credit/Debit -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Type"
            android:layout_marginTop="12dp"/>

        <RadioGroup
            android:id="@+id/rgPaymentType"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit" />

            <RadioButton
                android:id="@+id/rbDebit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit" />
        </RadioGroup>

        <!-- Expense Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Type"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spExpenseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etExpenseTypeOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="If Other, specify"
            android:visibility="gone" />

        <!-- Expense Owner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Owner"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etOwnerOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="If Other, specify"
            android:visibility="gone" />

        <!-- Logged By -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logged By"
            android:layout_marginTop="12dp"/>

        <RadioGroup
            android:id="@+id/rgLoggedBy"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbLoggedByAravindh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aravindh" />

            <RadioButton
                android:id="@+id/rbLoggedByDeepa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deepa" />
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>
